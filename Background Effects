<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subtle Grid Background</title>
    <style>
        /* Base styling */
        body {
            margin: 0;
            overflow: hidden;
            background-color: #0d0d0d; /* Dark background */
        }

        /* Grid Background */
        .grid-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: radial-gradient(#000000, #1a1a1a);
            display: grid;
            grid-template-columns: repeat(50, 1fr);
            grid-template-rows: repeat(50, 1fr);
            pointer-events: none;
        }

        .grid-line {
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.05);
        }
    </style>
</head>
<body>
    <div class="grid-background">
        <!-- Creates a 50x50 grid with subtle lines -->
        <script>
            const gridBackground = document.querySelector(".grid-background");
            for (let i = 0; i < 2500; i++) { // 50x50 grid
                const line = document.createElement("div");
                line.classList.add("grid-line");
                gridBackground.appendChild(line);
            }
        </script>
    </div>

    <script>
        document.addEventListener("mousemove", (e) => {
            const x = (e.clientX / window.innerWidth) - 0.5;
            const y = (e.clientY / window.innerHeight) - 0.5;

            // Adjust the grid position based on mouse movement
            document.querySelector(".grid-background").style.transform = `translate(${x * 10}px, ${y * 10}px)`;
        });
    </script>
</body>
</html>
